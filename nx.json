{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "tsc",
          "postbuild",
          "eslint"
        ]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "{projectRoot}/dist"
      ]
    },
    "tsc": {
      "outputs": [
        "{projectRoot}/dist"
      ]
    },
    "postbuild": {
      "outputs": [
        "{projectRoot}/licenses.json"
      ]
    }
  }
}
