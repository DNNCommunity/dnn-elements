{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "tsc",
          "build-storybook",
          "test"
        ]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "{projectRoot}/dist"
      ]
    },
    "test": {
      "dependsOn": [
        "^test"
      ]
    },
    "tsc": {
      "outputs": [
        "{projectRoot}/lib"
      ]
    },
    "build-storybook": {
      "outputs": [
        "{projectRoot}/storybook-static"
      ]
    }
  }
}
